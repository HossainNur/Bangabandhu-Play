<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.family_members.family_member_details.FamilyMemberDetailsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2FamilyDetails"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:titleTextColor="@color/white"
        app:title="Toolbar 2 Title"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


  <ImageView
      android:id="@+id/ivFamilyMemberDetails"
      android:layout_width="@dimen/_96ssp"
      android:layout_height="@dimen/_151sdp"
      android:scaleType="fitXY"
      android:src="@drawable/family"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toBottomOf="@id/toolbar2FamilyDetails"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvFamilyMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seikh Mujib"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ivFamilyMemberDetails"
        app:layout_constraintStart_toStartOf="@id/ivFamilyMemberDetails"
        app:layout_constraintEnd_toEndOf="@id/ivFamilyMemberDetails"/>

    <TextView
        android:id="@+id/tvFamilyMemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Former president"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="@dimen/_8ssp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvFamilyMemberName"
        app:layout_constraintStart_toStartOf="@id/tvFamilyMemberName"
        app:layout_constraintEnd_toEndOf="@id/tvFamilyMemberName"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollFamDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvFamilyMemTitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvFamilyMemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Former president fffffffffggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="@dimen/_8ssp"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_10sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cast_crew_image"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50sdp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/cast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:text="Salman Khan"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/cast_crew_image"
        app:layout_constraintStart_toEndOf="@+id/cast_crew_image"
        />

    <TextView
        android:id="@+id/cast_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_9ssp"
        android:text="Hero"
        app:layout_constraintStart_toStartOf="@+id/cast_name"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/cast_name"
        app:layout_constraintStart_toEndOf="@+id/cast_crew_image"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
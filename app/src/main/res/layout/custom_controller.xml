<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/controller_relative_layout"
    android:background="#80000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_movies_section_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:visibility="gone"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/ClickableView"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_content_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dhaka Attack"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@+id/iv_back"
            app:layout_constraintTop_toTopOf="@+id/iv_back"
            app:layout_constraintEnd_toStartOf="@+id/iv_setting"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="@dimen/_20ssp"
            android:layout_height="@dimen/_20ssp"
            style="@style/ClickableView"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@+id/iv_back"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintEnd_toStartOf="@+id/exo_lock"
            android:src="@drawable/baseline_settings_24"
            />

        <ImageView
            android:id="@+id/exo_lock"
            android:layout_width="@dimen/_20ssp"
            android:layout_height="@dimen/_20ssp"
            app:layout_constraintTop_toTopOf="@+id/iv_back"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/baseline_lock_open_24"
            android:theme="@style/ClickableView"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/sec_controlvid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">


        <ImageView
            android:id="@+id/exo_replay"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="40dp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_replay_10_24"
            android:theme="@style/ClickableView" />

        <ImageView
            android:id="@+id/exo_play"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/baseline_play_arrow_24"
            android:theme="@style/ClickableView" />

        <ImageView
            android:id="@+id/exo_pause"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/baseline_pause_24"
            android:theme="@style/ClickableView" />

        <ImageView
            android:id="@+id/exo_forward"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="40dp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_forward_10_24"
            android:theme="@style/ClickableView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sec_controlvid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exo_position"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#CBCDC8"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/exo_duration"
                android:textColor="#CBCDC8"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:src="@drawable/exo_controls_fullscreen_enter"
                android:id="@+id/bt_fullscreen"
                android:theme="@style/ClickableView"
                />
        </LinearLayout>

        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exo_progress"
            android:layout_marginTop="-8dp"
            app:unplayed_color="#45424E"
            app:buffered_color="#95989F"
            app:played_color="@color/yellow"
            app:scrubber_color="@color/yellow"
            />
    </LinearLayout>

</RelativeLayout>
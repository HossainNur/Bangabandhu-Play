<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_Pdf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:scaleType="fitXY"
        android:background="@drawable/rounded_corner_for_iv"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/banganabdhu"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:background="@drawable/pathshala_gradient"
        android:text="ha ha hahghghghghgh"
        android:textSize="10sp"
        android:maxLines="2"
        android:gravity="center"
        android:textColor="@color/white"
        android:elevation="100dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/iv_Pdf"
        app:layout_constraintEnd_toEndOf="@id/iv_Pdf"
        app:layout_constraintBottom_toBottomOf="@id/iv_Pdf"
        android:layout_marginBottom="4dp"/>


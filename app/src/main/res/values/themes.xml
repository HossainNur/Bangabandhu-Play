<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BangabandhuPlay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--RECYCLER VIEW TITLE-->
    <style name="recyclerViewTitleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="recyclerViewMoreTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:text">More</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <!--CONSTRAINT LAYOUT CONTAINER-->
    <style name="constraint">
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <!--RECYCLER VIEW-->
    <style name="recyclerView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="progressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/yellow</item>
    </style>
</resources>